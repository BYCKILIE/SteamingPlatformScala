GET         /                                  controllers.HomeController.index()
GET         /assets/*file                      controllers.Assets.versioned(path="/public", file: Asset)

# Credentials Routes
POST        /api.credentials-validate          controllers.CredentialsController.validateCredentials()
POST        /api.credentials-create            controllers.CredentialsController.createCredentials()
GET         /api.credentials-read/:id          controllers.CredentialsController.readCredentials(id: Long)
POST        /api.credentials-update/:id        controllers.CredentialsController.updateCredentials(id: Long)
GET         /api.credentials-delete/:id        controllers.CredentialsController.deleteCredentials(id: Long)

# Authentication / Authorisation
POST        /api.authenticate                  controllers.AuthenticationController.authenticate()
GET         /api.authorise                     controllers.AuthenticationController.authorise()
GET         /api.get-public                    controllers.AuthenticationController.sendPublicKey()

# Websocket
GET         /socket/:id                        controllers.WebSocketController.socket(id: String)

GET         /swagger.json                      controllers.Assets.at(path="/public", file="swagger.json")
GET         /docs/swagger-ui/*file             controllers.Assets.versioned(path="/public/lib/swagger-ui", file: Asset)
GET         /docs/swagger-ui                   controllers.SwaggerController.index

GET         /video                             controllers.VideoController.streamVideo(videoPath: String, chunk: String, video: Boolean)

